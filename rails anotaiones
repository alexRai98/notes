##############Para crear tablas#####################################

rails g scaffold Tabla campo:tipo

#############Para relacionar#######################################

rails g scaffold NewTabla campo:tipo tabla:reference
############Para agregar un campo##################################

rails g migration add_campo_to_table campo

###########Para migrar a la bd####################################

rake db:migrate


##########Para crear los controladores############################

rails g controller welcome index

